@model IEnumerable<Capstone.Models.ArtistArtwork>

@{
    ViewData["Title"] = "All Artwork";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Artwork</h1>

<p>
    <a asp-action="Create">Add New Artwork</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtworkPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InStock)
                </td>
                <td>
                    <img src="@Html.Raw(item.ImgUrl)" alt="Artwork Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArtworkPrice)
                </td>
                @Html.HiddenFor(modelItem => item.Artist.ArtistId)
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArtistArtworkId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ArtistArtworkId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArtistArtworkId">Delete</a>
                </td>
                
            </tr>
        }
        </tbody>
</table>
